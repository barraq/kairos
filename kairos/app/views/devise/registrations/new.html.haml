.container
  .form-devise
    %h2= t('message.auth.sign_up')
    = form_for resource, as: resource_name, url: registration_path(resource_name), html: {role: 'form'} do |f|
      = f.email_field :email,
        autofocus: true,
        class: 'form-control',
        placeholder: t('message.form.email_address')
      = f.password_field :password,
        autocomplete: 'off',
        class: 'form-control',
        placeholder: @validatable ? t('message.form.password_min_chars', length: @minimum_password_length) : t('message.form.password')
      = f.password_field :password_confirmation,
        autocomplete: 'off',
        class: 'form-control',
        placeholder: t('message.form.password_confirmation')
      = f.submit t('message.auth.sign_up'),
        :class => 'btn btn-lg btn-primary btn-block'
    = render 'devise/shared/links'